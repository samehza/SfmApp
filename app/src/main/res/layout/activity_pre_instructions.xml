<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreInstructionsActivity"
    android:background="@drawable/bg_add_clim">

    <TextView
        android:id="@+id/pre_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/company"
        android:layout_marginTop="@dimen/_25sdp"
        android:fontFamily="@font/segbold"
        android:text="Préparation"
        android:textAlignment="center"
        android:textColor="#222F5C"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:textColor="#484848"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/seguisb"
        android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/textView2"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:text="Appliquez au climatiseur les configurations suivantes:\n- Appuyez sur ON\n- Appliquer la température 26°C\n- Appuyez sur OFF"
        app:layout_constraintTop_toBottomOf="@+id/pre_instructions"
        tools:layout_editor_absoluteX="0dp" />

    <ProgressBar
        android:id="@+id/progressBar"

        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_20sdp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_40sdp"
        android:outlineAmbientShadowColor="#222F5C"
        android:outlineSpotShadowColor="#222F5C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminer" />

    <Button
        android:id="@+id/terminer"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_65sdp"
        android:background="@drawable/signinbtn"
        android:fontFamily="@font/segbold"
        android:text="Terminer"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/whiterect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>